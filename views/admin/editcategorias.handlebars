    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Editar categoria: </h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
        <input type="hidden" name="id" value="{{categorias._id}}">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" class="form-control" value="{{categorias.nome}}">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" class="form-control" value="{{categorias.slug}}">
                <br>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>